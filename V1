-- Script to modify player attributes and provide UI for testing

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- UI Setup
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 300, 0, 200)
Frame.Position = UDim2.new(0.5, -150, 0.5, -100)

-- Walk Speed Slider
local walkSpeedSlider = Instance.new("Slider", Frame)
walkSpeedSlider.Size = UDim2.new(1, 0, 0, 50)
walkSpeedSlider.Position = UDim2.new(0, 0, 0, 20)
walkSpeedSlider.Min = 16
walkSpeedSlider.Max = 100
walkSpeedSlider.Value = character.Humanoid.WalkSpeed

walkSpeedSlider.Changed:Connect(function(value)
    character.Humanoid.WalkSpeed = value
end)

-- Fly Mode Toggle
local flyButton = Instance.new("TextButton", Frame)
flyButton.Size = UDim2.new(1, 0, 0, 50)
flyButton.Position = UDim2.new(0, 0, 0, 80)
flyButton.Text = "Toggle Fly Mode"

local flying = false
flyButton.MouseButton1Click:Connect(function()
    flying = not flying
    if flying then
        character.Humanoid.PlatformStand = true
        while flying do
            character:Move(Vector3.new(0, 1, 0))  -- Move up
            wait(0.1)
        end
        character.Humanoid.PlatformStand = false
    end
end)

-- Initialize UI
ScreenGui.Parent = game.CoreGui
